// Layer Triggers
#define FUN_ESC		LT(_FUNCTION,KC_ESC)
#define FUN_P00		LT(_FUNCTION,KC_P00)
#define FUN_ENT		LT(_FUNCTION,KC_ENT)
#define FUN_BSPC	LT(_FUNCTION,KC_BSPC)
#define FUN_DEL		LT(_FUNCTION,KC_DEL)
#define FUN_TAB		LT(_FUNCTION,KC_TAB)
#define FUN_RGUI	LT(_FUNCTION,KC_RGUI)

#define NUM_BSPC	LT(_NUMBER,KC_BSPC)
#define NUM_SPC		LT(_NUMBER,KC_SPC)

#define NAV_DEL		LT(_NAVIGATION,KC_DEL)
#define NAV_TAB		LT(_NAVIGATION,KC_TAB)
#define NAV_ENT		LT(_NAVIGATION,KC_ENT)
#define NAV_ESC		LT(_NAVIGATION,KC_ESC)
#define NAV_RGUI	LT(_NAVIGATION,KC_RGUI)

// Macro Shortcuts
#define M_RDPESC	LCA(KC_HOME)
#define M_NDSKTP	G(C(KC_RGHT))
#define M_PDSKTP	G(C(KC_LEFT))
#define M_UNDO		LCTL(KC_Z)
#define M_CUT		LCTL(KC_X)
#define M_COPY		LCTL(KC_C)
#define M_PASTE		LCTL(KC_V)
#define M_REDO		LCTL(KC_Y)
